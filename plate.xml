<?xml version="1.0"?>
    <plate>

        <head>
            <doctype>html5</doctype>
            <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <script src="//code.jquery.com/jquery-1.12.4.min.js" />
            <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.bundle.min.js" />
            <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js" />
            <script src="//cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.js" />
            <link  rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css"/>
            <link  rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css"/>
            <googlefont family="Montserrat" />
            <googlefont family="Droid Serif" />
            <googlefont family="Hind" />
        </head>
        <!-- CLIPPINGS -->
        <clippings>
            <text name="site_name" name_friendly="Site Name" required="1"><![CDATA[]]></text>
            <images name="logo" name_friendly="Site Logo" limit="1" />
            <text name="petdesk_id" name_friendly="PetDesk ID"><![CDATA[]]></text>
            <text name="footer_text" name_friendly="Footer Text"><![CDATA[]]></text>
            <text name="contact_email" name_friendly="Contact Email"><![CDATA[]]></text>
            <text name="contact_phone" name_friendly="Contact Phone"><![CDATA[]]></text>
            <textarea name="hours" name_friendly="Hours" list="1" />
            <textarea name="address" name_friendly="Address" list="1" />
            <link name="appointments_link" name_friendly="Appointments Link" />
            <link name="facebook" name_friendly="Facebook (If no Facebook, just add a space.)" />
            <link name="facebook" name_friendly="Facebook (If no Facebook, just add a space.)" />
            <link name="twitter" name_friendly="Twitter (If no Twitter, just add a space.)" />
            <link name="instagram" name_friendly="Instagram (If no Instagram, just add a space.)" />
            <images name="petdesk_banner" name_friendly="PetDesk Banner" limit="1" />
            <text name="image_alt" name_friendly="Image Alt"><![CDATA[]]></text>
        </clippings>
        <ingredients>

          <!-- HEADLESS-1 FAQ  -->
          <dataset name="faqs" name_friendly="FAQs">
            <fields>
                <text name="question" name_friendly="Question" list="1" />
                <wysiwyg_advanced name="answer" name_friendly="Answer" list="1" />
                <sort name="sort_order" name_friendly="Sort Order" list="1" />
            </fields>
            <items>
              <item link_title="" path_part="">
                  <question><![CDATA[]]></question>
                  <answer><![CDATA[]]></answer>
                  <sort_order><![CDATA[]]></sort_order>
              </item>
            </items>
          </dataset>

          <!-- HEADLESS-2 TESTIMONIALS  -->
          <dataset name="testimonials" name_friendly="Testimonials">
            <fields>
              <text name="title" name_friendly="Title" list="1"/>
              <wysiwyg_advanced name="content" name_friendly="Content" list="1" />
              <sort name="sort_order" name_friendly="Sort Order" list="1" />
            </fields>
            <items>
              <item link_title="" path_part="">
                  <title><![CDATA[]]></title>
                  <content><![CDATA[]]></content>
                  <sort_order><![CDATA[]]></sort_order>
              </item>
            </items>
          </dataset>

          <!-- HEADLESS-3 NAVIGATION  -->
          <dataset name="navigation" name_friendly="Navigation">
            <fields>
              <text name="title" name_friendly="Title" list="1" />
              <internal_link name="internal_link" name_friendly="Internal Link" />
              <link name="external_url" name_friendly="External URL" />
              <text name="link" name_friendly="Link" list="1" />
              <internal_link name="parent_nav_item" name_friendly="Parent Nav Item (this field is used to create dropdowns for nav items. If an item is top-level then you must choose None. All items must have a selection.)" list="1" />
              <sort name="sort_order" name_friendly="Sort Order" list="1" />
            </fields>
            <items link_title="" path_part="">
              <title><![CDATA[]]></title>
              <internal_link><![CDATA[]]></internal_link>
              <external_url><![CDATA[]]></external_url>
              <link><![CDATA[]]></link>
              <parent_nav_item><![CDATA[]]></parent_nav_item>
              <sort_order><![CDATA[]]></sort_order>
            </items>
          </dataset>


          <!-- 1. HOMEPAGE -->
          <templateset name="homepage" name_friendly="Homepage" view="homepage">
              <fields>
                <text name="below_the_fold_title" name_friendly="Below the Fold Title (This title is displayed below the hero image and cards.)" />
                <wysiwyg_advanced name="below_the_fold_content" name_friendly="Below the Fold Content (This content is displayed in the 'Below the Fold' Section and can be edited to display multiple columns by using the table function in the content editor.)" />
                <yes_no name="display_testimonials" name_friendly="Display Testimonials (For showing the Testimonial's carousel in the Homepage, click Yes or No)" options="0:No;1:Yes;" />
                <text name="faqs_title" name_friendly="FAQs Title (This content displayed in the FAQs section of the Homepage)" />
                <wysiwyg_advanced name="faqs_content" name_friendly="FAQs Content (This content is displayed in the FAQs section below its title.)" />
                <images name="faqs_image" name_friendly="FAQs Image (This image is displayed on the left section of the FAQs content in the Homepage.)" limit="1" />
                <text name="faqs_video" name_friendly="FAQs Video (Use this field to paste a link of a hosted video. For example, this can be a YouTube link or if the video is uploaded directly to Zesty then it can be it's media URL. If no video will be used then leave this field blank.)" />
                <text name="cta_title" name_friendly="CTA Title (The Call to Action section is displayed directly below the FAQs section.)" />
                <wysiwyg_advanced name="cta_content" name_friendly="CTA Content" />
                <images name="cta_background_image" name_friendly="CTA Background Image (This image remains fixed while the user scrolls and is responsive based on screen size.)" limit="1" />
                <yes_no name="cta_image_color_overlay" name_friendly="CTA Image Color Overlay (This function will add a color overlay to the CTA Image using the instance's selected Primary Color at 20% opacity.)" options="0:No;1:Yes;"  />
                <text name="cta_button_text" name_friendly="CTA Button Text (This button is displayed to the right of the CTA section)" />
                <internal_link name="button_link_internal" name_friendly="CTA Button link: Internal" />
                <link name="button_link_external" name_friendly="CTA Button Link: External (will override internal link)" />
                <yes_no name="cta_new_tab" name_friendly="Open CTA button link in new tab? (select whether or not you'd like the CTA Button link to open in a new tab.)" options="0:No;1:Yes;" />
                <text name="about_section_title" name_friendly="About Section Title" />
                <wysiwyg_advanced name="about_section_content" name_friendly="About Section Content" />
              </fields>
              <items>
                  <item link_title="Home" path_part="zesty_home">
                    <below_the_fold_title><![CDATA[homepage]]></below_the_fold_title>
                    <below_the_fold_content><![CDATA[]]></below_the_fold_content>
                    <display_testimonials><![CDATA[]]></display_testimonials>
                    <faqs_title><![CDATA[]]></faqs_title>
                    <faqs_content><![CDATA[]]></faqs_content>
                    <faqs_image><![CDATA[]]></faqs_image>
                    <faqs_video><![CDATA[]]></faqs_video>
                    <cta_title><![CDATA[]]></cta_title>
                    <cta_content><![CDATA[]]></cta_content>
                    <cta_background_image><![CDATA[]]></cta_background_image>
                    <cta_image_color_overlay><![CDATA[]]></cta_image_color_overlay>
                    <cta_button_text><![CDATA[]]></cta_button_text>
                    <button_link_internal><![CDATA[]]></button_link_internal>
                    <button_link_external><![CDATA[]]></button_link_external>
                    <cta_new_tab><![CDATA[]]></cta_new_tab>
                    <about_section_title><![CDATA[]]></about_section_title>
                    <about_section_content><![CDATA[]]></about_section_content>
                  </item>
              </items>
          </templateset>
          <!-- END HOMEPAGE -->

          <!-- 1.1 Homepage slider dataset -->
          <dataset name="hero_sliders" name_friendly="Hero Sliders" parent_item="zesty_home">
                <fields>
                  <images name="image" name_friendly="Image" limit="1" list="1" />
                  <text name="alt_text" name_friendly="Alt Text" list="1" />
                  <text name="header_text" name_friendly="Header Text (This displays as the the title text overlaid on the image above the body text.)" list="1" />
                  <wysiwyg_advanced name="body_text" name_friendly="Body Text (This content displays as the main content overlaid on the image. )" />
                  <text name="button_text" name_friendly="Button Text (Leave blank fro no slider button)" list="1" />
                  <internal_link name="button_link_internal" name_friendly="Button link: Internal" list="1" />
                  <link name="button_link_external" name_friendly="Button link: External (will override internal link field)" />
                  <yes_no name="button_new_tab" name_friendly="Open in new tab? (select whether or not you'd like the slider link to open in a new tab.)" options="0:No;1:Yes;" list="1"/>
                  <sort name="sort_order" name_friendly="Sort Order" list="1" />
                </fields>
                <items>
                    <item link_title="" path_part="">
                        <image><![CDATA[]]></image>
                        <alt_text><![CDATA[]]></alt_text>
                        <header_text><![CDATA[]]></header_text>
                        <body_text><![CDATA[]]></body_text>
                        <button_text><![CDATA[]]></button_text>
                        <button_link_internal><![CDATA[]]></button_link_internal>
                        <button_link_external><![CDATA[]]></button_link_external>
                        <button_new_tab><![CDATA[]]></button_new_tab>
                        <sort_order><![CDATA[1]]></sort_order>
                    </item>
                </items>
            </dataset>
            <!-- 1.1 Homepage slider dataset END -->

            <!-- 1.2 Hero Cards dataset -->
            <dataset name="hero_cards" name_friendly="Hero Cards" parent_item="zesty_home">
              <fields>
                <text name="title" name_friendly="Title" list="1" />
                <text name="boxicon" name_friendly="Boxicon (Uses Boxicons - check their site for the icon you'd like to use. Select Font tab and copy the class name after 'bx' eg bx-book-alt and paste it in this text field.)" list="1" />
                <textarea name="content" name_friendly="Content" list="1" />
                <text name="button_text" name_friendly="Button Text" list="1" />
                <internal_link name="button_link_internal" name_friendly="Button link: Internal" list="1" />
                <link name="button_link_external" name_friendly="Button link: External (will override internal link field)" list="1" />
                <yes_no name="button_new_tab" name_friendly="Open in new tab? (select whether or not you'd like the link to open in a new tab.)" options="0:No;1:Yes;" list="1" />
                <sort name="sort_order" name_friendly="Sort Order" list="1" />
              </fields>
              <items>
                  <item link_title="" path_part="">
                    <title><![CDATA[]]></title>
                    <boxicon><![CDATA[]]></boxicon>
                    <content><![CDATA[]]></content>
                    <button_text><![CDATA[]]></button_text>
                    <button_link_internal><![CDATA[]]></button_link_internal>
                    <button_link_external><![CDATA[]]></button_link_external>
                    <button_new_tab><![CDATA[]]></button_new_tab>
                    <sort_order><![CDATA[]]></sort_order>
                  </item>
              </items>
            </dataset>
            <!-- 1.2 Hero Cards dataset END -->
            <!-- HOMEPAGE END -->


            <!-- 2. Gallery -->
              <templateset name="gallery" name_friendly="Gallery" view="gallery">
                  <fields>
                      <text name="title" name_friendly="Title" />
                      <wysiwyg_advanced name="content" name_friendly="Content" />
                  </fields>
                  <items>
                      <item link_title="Gallery" path_part="gallery" parent_item="gallery">
                          <title><![CDATA[]]></title>
                          <content><![CDATA[]]></content>
                      </item>
                    </items>
                  </templateset>

              <!-- 2.1 Gallery Dataset: Collections -->
              <dataset name="gallery_collections" name_friendly="Gallery Collections" parent_item="gallery">
                  <fields>
                      <text name="title" name_friendly="Title" list="1" />
                      <sort name="sort_order" name_friendly="Sort Order" list="1" />
                  </fields>
                  <items>
                    <title><![CDATA[]]></title>
                    <sort_order><![CDATA[]]></sort_order>
                  </items>
              </dataset>
              <!-- 2.2 Gallery Dataset: Media -->
              <dataset name="gallery_media" name_friendly="Gallery Media" parent_item="gallery">
                  <fields>
                      <images name="image" name_friendly="Image" limit="1" />
                      <text name="alt_text" name_friendly="Alt Text" />
                      <link name="external_url_video" name_friendly="External URL (video: Use this field to paste the URL of a hosted video. This can be an internally hosted video on Zesty or an externally hosted video: i.e, YouTube. If the media item will only be an image then leave this field blank.)" list="1" />
                      <one_to_many name="gallery_collection" name_friendly="Gallery Collection" relationship="gallery_collections" relationship_field="title" list="1" />
                      <sort name="sort_order" name_friendly="Sort Order" list="1" />
                  </fields>
                  <items>
                    <image><![CDATA[]]></image>
                    <alt_text><![CDATA[]]></alt_text>
                    <external_url_video><![CDATA[]]></external_url_video>
                    <gallery_collection><![CDATA[]]></gallery_collection>
                    <sort_order><![CDATA[]]></sort_order>
                  </items>
              </dataset>
              <!-- GALLERY END -->

            <!-- 3. GENERIC PAGE: PRIVACY POLICY, ToS, THANK YOU ** -->
            <templateset name="generic_page" name_friendly="Generic Page" view="generic_page">
              <fields>
                <text name="title" name_friendly="Title" />
                <images name="image" name_friendly="Image" limit="1" />
                <text name="image_alt" name_friendly="Image Alt" />
                <wysiwyg_advanced name="content" name_friendly="Content" />
                <yes_no name="display_section_links_sidebar" name_friendly="Display Section Links Sidebar? (The Section Links sidebar will display all pages that have the same parent page. )" options="0:No;1:Yes;" />
              </fields>
              <items>
                <title><![CDATA[]]></title>
                <image><![CDATA[]]></image>
                <image_alt><![CDATA[]]></image_alt>
                <content><![CDATA[]]></content>
                <display_section_links_sidebar><![CDATA[]]></display_section_links_sidebar>
            </items>
          </templateset>
          <!-- GENERIC PAGE END  -->

          <!-- 4. RESOURCES -->
            <templateset name="resources" name_friendly="Resources" view="resources">
                <fields>
                    <text name="title" name_friendly="Title" />
                    <images name="image" name_friendly="Image" limit="1" />
                    <text name="image_alt" name_friendly="Image Alt" />
                    <yes_no name="display_pet_desk_banner" name_friendly="Display Pet Desk Banner?" options="0:No;1:Yes;" />
                    <wysiwyg_advanced name="content" name_friendly="Content" />
                    <yes_no name="display_patient_forms" name_friendly="Display Patient Forms?" options="0:No;1:Yes;" />
                </fields>
                <items>
                    <item link_title="Resources" path_part="resources">
                        <title><![CDATA[Resources]]></title>
                        <image><![CDATA[https://cdb368edefc437a74249-428b2f4da1bce612540a137d021c11ad.ssl.cf2.rackcdn.com/standard-hero.jpg]]></image>
                        <image_alt><![CDATA[]]></image_alt>
                        <display_pet_desk_banner><![CDATA[]]></display_pet_desk_banner>
                        <content><![CDATA[]]></content>
                        <display_patient_forms><![CDATA[]]></display_patient_forms>
                    </item>
                  </items>
                </templateset>
                <!--  4.1 Resources Dataset: Online Forms  -->
            <dataset name="online_forms" name_friendly="Online Forms" parent_item="resources">
                <fields>
                  <text name="title" name_friendly="Title" list="1" />
                  <wysiwyg_advanced name="description" name_friendly="Description" list="1" />
                  <images name="pdf" name_friendly="PDF" limit="1" list="1" />
                  <sort name="sort_order" name_friendly="Sort Order" list="1" />
                </fields>
                <items>
                  <title><![CDATA[]]></title>
                  <description><![CDATA[]]></description>
                  <pdf><![CDATA[]]></pdf>
                  <sort_order><![CDATA[]]></sort_order>
                </items>
            </dataset>
            <!-- RESOURCES END -->

            <!-- 5. CONTACT US -->
            <templateset name="contact" name_friendly="Contact" view="contact">
                <fields>
                    <text name="title" name_friendly="Title" />
                    <wysiwyg_advanced name="content" name_friendly="Content" />
                    <yes_no name="display_contact_form" name_friendly="Display Contact Form?" options="0:Text;1:Textarea;" />
                    <textarea name="hours" name_friendly="Hours" />
                    <textarea name="google_maps_embed" name_friendly="Google Maps Embed" />
                </fields>
                <items>
                    <item link_title="Contact" path_part="contact">
                      <title><![CDATA[]]></title>
                      <content><![CDATA[]]></content>
                      <display_contact_form><![CDATA[]]></display_contact_form>
                      <hours><![CDATA[]]></hours>
                      <google_maps_embed><![CDATA[]]></google_maps_embed>
                    </item>
                </items>
            </templateset>
            <!-- CONTACT US END -->

            <!-- 6. Blog -->
            <templateset name="blog" name_friendly="Blog" view="blog">
                <fields>
                    <text name="title" name_friendly="Title" required="1" />
                </fields>
                <items>
                    <item link_title="Blog" path_part="blog">
                        <title><![CDATA[Our Services]]></title>
                    </item>
                </items>
            </templateset>
            <!-- Blog Pagesets (Articles and Tags) -->
            <!-- 6.1 Blog: Articles -->
            <pageset name="articles" name_friendly="Articles" view="articles" parent_item="blog">
                <fields>
                    <text name="title" name_friendly="Title" required="1" list="1" />
                    <images name="image" name_friendly="Image" list="1" />
                    <text name="image_alt" name_friendly="Image Alt" />
                    <date name="date" name_friendly="Date" />
                    <wysiwyg_advanced name="content" name_friendly="Content" />
                    <one_to_many name="tags" name_friendly="Tags" relationship="tags" relationship_field="title" />
                </fields>
                <items>
                  <item link_title="Sample Article" path_part="sample-article" parent="blog">
                    <title><![CDATA[]]></title>
                    <image><![CDATA[]]></image>
                    <image_alt><![CDATA[]]></image_alt>
                    <date><![CDATA[]]></date>
                    <content><![CDATA[]]></content>
                    <tags><![CDATA[]]></tags>
                  </item>
                </items>
            </pageset>
            <!-- 6.2 Blog: Tags -->
            <pageset name="tags" name_friendly="Tags" view="tags" parent_item="blog">
                <fields>
                    <text name="title" name_friendly="Title" required="1" list="1" />
                </fields>
                <items>
                  <item link_title="Sample Tag" path_part="sample-tag" parent="blog">
                    <title><![CDATA[]]></title>
                  </item>
                </items>
            </pageset>
            <!-- END BLOG -->

            <!-- 7. OUR SERVICES -->
            <templateset name="our_services" name_friendly="Our Services" view="our_services">
                <fields>
                    <text name="title" name_friendly="Title" />
                    <images name="image" name_friendly="Image" limit="1" />
                    <wysiwyg_advanced name="content" name_friendly="Content"  />
                    <yes_no name="display_testimonials" name_friendly="Display Testimonials (For showing the Testimonial's carousel in the Homepage, click Yes or No)" options="0:No;1:Yes;" />
                </fields>
                <items>
                    <item link_title="Services" path_part="our-services">
                        <title><![CDATA[]]></title>
                        <image><![CDATA[]]></image>
                        <content><![CDATA[]]></content>
                        <display_testimonials><![CDATA[]]></display_testimonials>
                    </item>
                </items>
            </templateset>
            <!-- Services Dataset -->
            <dataset name="services" name_friendly="Services" parent_item="our-services">
                <fields>
                    <text name="title" name_friendly="Title" list="1" />
                    <wysiwyg_advanced name="content" name_friendly="Content" list="1" />
                    <sort name="sort_order" name_friendly="Sort Order" list="1" />
                </fields>
                <items>
                  <title><![CDATA[]]></title>
                  <content><![CDATA[]]></content>
                  <sort_order><![CDATA[]]></sort_order>
                </items>
            </dataset>
            <!-- Services Dataset End -->
            <!-- SERVICES END -->


            <!-- 8. ABOUT US -->
            <templateset name="about" name_friendly="About" view="about">
                <fields>
                    <text name="title" name_friendly="Title" required="1"/>
                    <images name="image" name_friendly="Image" limit="1" />
                    <wysiwyg_advanced name="content" name_friendly="Content" />
                    <text name="team_section_title" name_friendly="Team Section Title" />
                    <yes_no name="display_testimonials" name_friendly="Display Testimonials (For showing the Testimonial's carousel in the Homepage, click Yes or No)" options="0:No;1:Yes;" />
                </fields>
                <items>
                    <item link_title="About" path_part="about" parent_item="about">
                        <title><![CDATA[]]></title>
                        <image><![CDATA[]]></image>
                        <content><![CDATA[]]></content>
                        <team_section_title><![CDATA[]]></team_section_title>
                        <display_testimonials><![CDATA[]]></display_testimonials>
                    </item>
                </items>
            </templateset>

            <!-- About Us Datasets: Veterinarians -->
            <dataset name="team1" name_friendly="Veterinarians" parent_item="about">
              <fields>
                <images name="image" name_friendly="Image" limit="1" />
                <text name="name" name_friendly="Name" list="1" />
                <text name="job_title" name_friendly="Job Title" list="1" />
                <wysiwyg_advanced name="bio_content" name_friendly="Bio Content" list="1" />
                <sort name="sort_order" name_friendly="Sort Order" list="1" />
              </fields>
              <items>
                <item>
                  <image><![CDATA[]]></image>
                  <name><![CDATA[]]></name>
                  <job_title><![CDATA[]]></job_title>
                  <bio_content><![CDATA[]]></bio_content>
                  <sort_order><![CDATA[]]></sort_order>
                </item>
              </items>
            </dataset>
            <!-- Veterinarians End -->
            <!-- About Us Datasets: Staff -->
            <dataset name="team2" name_friendly="Staff" parent_item="about">
                <fields>
                  <images name="image" name_friendly="Image" limit="1" />
                  <text name="name" name_friendly="Name" list="1" />
                  <text name="job_title" name_friendly="Job Title" list="1" />
                  <wysiwyg_advanced name="bio_content" name_friendly="Bio Content" list="1" />
                  <sort name="sort_order" name_friendly="Sort Order" list="1" />
                </fields>
                <items>
                  <item>
                    <image><![CDATA[]]></image>
                    <name><![CDATA[]]></name>
                    <job_title><![CDATA[]]></job_title>
                    <bio_content><![CDATA[]]></bio_content>
                    <sort_order><![CDATA[]]></sort_order>
                  </item>
                </items>
            </dataset>
            <!-- Staff End -->
            <!-- ABOUT US END  -->
        </ingredients>
    </plate>
